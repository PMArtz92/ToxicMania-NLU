<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoAction" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="PlayTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="playButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlHighlight">#b3ff01</item>
        <item name="colorButtonNormal">#32cb00</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Submit Button -->
    <style name="submitButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#32cb00</item>
        <item name="colorControlHighlight">#b3ff01</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <!-- Skip Button -->
    <style name="skipButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#66BB6A</item>
        <item name="colorControlHighlight">#C8E6C9</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <!-- Blue Button -->

    <!-- Yellow Button -->
    <style name="yellowButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#ef8500</item>
        <item name="colorControlHighlight">#FFC107</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <!-- Dark Buttons -->

    <!-- custom rating bar -->


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
